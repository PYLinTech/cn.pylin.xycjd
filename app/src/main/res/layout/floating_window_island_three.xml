<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/island_background"
    android:gravity="center">

    <cn.pylin.xycjd.CircleImageView
        android:id="@+id/circle_app_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="2dp"
        android:padding="0dp" />

    <View
        android:id="@+id/circle_black"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="2dp"
        android:background="@drawable/circle_black_background" />

    <View
        android:id="@+id/circle_black2"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="2dp"
        android:background="@drawable/circle_black_background" />

</LinearLayout>