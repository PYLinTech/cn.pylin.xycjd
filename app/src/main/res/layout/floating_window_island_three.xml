<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <!-- Background Layer -->
    <View
        android:id="@+id/island_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/island_background" />

    <!-- Circles Layer -->
    <LinearLayout
        android:id="@+id/circles_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Circle 1 (Topmost) -->
        <cn.pylin.xycjd.CircleImageView
            android:id="@+id/circle_app_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            android:padding="0dp" />

        <!-- Placeholder 1 -->
        <View
            android:id="@+id/spacer_left"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <!-- Circle 2 (Middle) -->
        <View
            android:id="@+id/circle_black"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="2dp"
            android:elevation="5dp"
            android:background="@android:color/transparent" />

        <!-- Placeholder 2 -->
        <View
            android:id="@+id/spacer_right"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <!-- Circle 3 (Bottommost) -->
        <View
            android:id="@+id/circle_black2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="2dp"
            android:elevation="0dp"
            android:background="@android:color/transparent" />

    </LinearLayout>

</FrameLayout>
