<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 顶部标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_filter"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- 应用列表板块 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_apps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 应用列表标题栏 (点击可折叠/展开) -->
            <RelativeLayout
                android:id="@+id/header_apps"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_apps"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />

                <ImageButton
                    android:id="@+id/arrow_apps"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_down"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    app:tint="?android:attr/textColorPrimary" />

                <ImageButton
                    android:id="@+id/menu_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_menu"
                    android:padding="8dp"
                    android:layout_toStartOf="@id/arrow_apps"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    app:tint="?android:attr/textColorPrimary" />

            </RelativeLayout>

            <!-- 应用列表内容区域 -->
            <LinearLayout
                android:id="@+id/content_apps"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


            <!-- 应用列表表头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="?android:attr/windowBackground">

                <!-- 应用名称区域 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name_header"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 启用勾选框区域 -->
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_header"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_expand_header"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <ListView
                android:id="@+id/apps_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />
            
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 通知过滤板块 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 通知过滤标题栏 -->
            <RelativeLayout
                android:id="@+id/header_notice"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackground"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_notice"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />

                <ImageButton
                    android:id="@+id/arrow_notice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_down"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    app:tint="?android:attr/textColorPrimary" />

            </RelativeLayout>

            <!-- 通知过滤内容区域 -->
            <LinearLayout
                android:id="@+id/content_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="通知过滤内容待添加..."
                    android:gravity="center"
                    android:padding="20dp" />
                    
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
