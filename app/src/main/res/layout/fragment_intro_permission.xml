<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/intro_permission"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="24dp" />

        <!-- 内容 -->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_permission_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- 权限列表 -->
        <LinearLayout
            android:id="@+id/permission_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- 无障碍权限项 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/permission_item_accessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_permission_accessibility"
                                android:layout_marginEnd="16dp"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/permission_accessibility"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_accessibility_desc"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="40dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="40dp">

                            <TextView
                                android:id="@+id/accessibility_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/permission_status_denied"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/accessibility_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="@string/permission_action_grant"
                                android:background="@drawable/btn_primary_background" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_tag_critical"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_tag_critical"
                        android:layout_gravity="top|end" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- 悬浮窗权限项 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/permission_item_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_permission_overlay"
                                android:layout_marginEnd="16dp"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/permission_overlay"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/permission_overlay_desc"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="40dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="40dp">

                            <TextView
                                android:id="@+id/overlay_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/permission_status_denied"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/overlay_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="@string/permission_action_grant"
                                android:background="@drawable/btn_primary_background" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_tag_critical"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_tag_critical"
                        android:layout_gravity="top|end" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- 通知监听权限项 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/permission_item_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notification_listener_bell"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/permission_notification_listener"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_notification_listener_desc"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="40dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp">

                        <TextView
                            android:id="@+id/notification_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/permission_status_denied"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/notification_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:text="@string/permission_action_grant"
                            android:background="@drawable/btn_primary_background" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 通知权限项 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/permission_item_notification_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notification"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/permission_notification_post"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_notification_post_desc"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="40dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp">

                        <TextView
                            android:id="@+id/notification_post_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/permission_status_denied"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/notification_post_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:text="@string/permission_action_grant"
                            android:background="@drawable/btn_primary_background" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 电池优化权限项 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/permission_item_battery_optimization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_permission_battery"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/permission_battery_optimization"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_battery_optimization_desc"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="40dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="40dp">

                        <TextView
                            android:id="@+id/battery_optimization_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/permission_status_denied"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/battery_optimization_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:text="@string/permission_action_grant"
                            android:background="@drawable/btn_primary_background" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
