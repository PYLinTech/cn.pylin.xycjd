<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 语言设置 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <!-- 语言设置标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language_setting"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp" />
                
                <!-- 语言选择 -->
                <RadioGroup
                    android:id="@+id/radio_group_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorSurface">
                    
                    <RadioButton
                        android:id="@+id/radio_btn_chinese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chinese"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp" />
                    
                    <RadioButton
                        android:id="@+id/radio_btn_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:padding="16dp" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 主题设置 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <!-- 主题设置标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_setting"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp" />
                
                <!-- 主题选择 -->
                <RadioGroup
                    android:id="@+id/radio_group_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorSurface">
                    
                    <RadioButton
                        android:id="@+id/radio_btn_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_light"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp" />
                    
                    <RadioButton
                        android:id="@+id/radio_btn_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_dark"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp" />
                        
                    <RadioButton
                        android:id="@+id/radio_btn_system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_system"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:buttonTint="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:padding="16dp" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 权限设置 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <!-- 权限设置标题和描述 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_setting"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_setting_desc"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>